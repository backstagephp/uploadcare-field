{
    "name": "backstage/uploadcare-field",
    "description": "Uploadcare Field component for the Backstage CMS.",
    "keywords": [
        "Vormkracht10",
        "laravel",
        "backstage-uploadcare-field"
    ],
    "homepage": "https://github.com/backstagephp/uploadcare-field",
    "license": "MIT",
    "authors": [
        {
            "name": "Baspa",
            "email": "hello@baspa.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "backstage/filament-uploadcare-field": "^0.3.8",
        "backstage/fields": "^0.6.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0||^9.0.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0||^10.0.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Backstage\\UploadcareField\\": "src/",
            "Backstage\\UploadcareField\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Backstage\\UploadcareField\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "post-install-cmd": [
            "@php -r \"if (file_exists('vendor/autoload.php')) { require_once 'vendor/autoload.php'; if (class_exists('Illuminate\\\\Support\\\\Facades\\\\Artisan')) { \\\\Illuminate\\\\Support\\\\Facades\\\\Artisan::call('migrate', ['--force' => true]); } }\""
        ],
        "clear": "@php vendor/bin/testbench package:purge-backstage-uploadcare-field --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Backstage\\UploadcareField\\UploadcareFieldServiceProvider"
            ],
            "aliases": {
                "UploadcareField": "Backstage\\UploadcareField\\Facades\\UploadcareField"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "fields": {
            "type": "git",
            "url": "https://github.com/backstagephp/fields.git"
        }
    }
}
